@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'

vendor_prefixes = o ms webkit moz


 @font-face
   font-family Abel
   font-style normal
   src url(../fonts/Abel-Regular.ttf)



media_queries = {
  mobile  : "only screen and (max-width: 600px)",  
  mobile-land  : "only screen and (max-height: 320px)",
  tablet  : "only screen and (min-width: 601px) and (max-width: 800px)",
  desktop : "only screen and (min-width: 801px)"
}

for_breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}
    
#loading 
  display none
.success, .error
  width 100%
  height 30px
  margin auto
  position fixed
  text-align center
  background rgba(green,.8)
  border 1px solid ctexto
  top 1px
  display none
  color #fff
  box-sizing border-box
  overflow hidden
  z-index 1000 !important
  font-size 1.3em
.error
  background rgba(red,.8)
  
input[type="file"]
  width 0px
  float left
  z-index -1
  overflow hidden


#modalCliente
  width 800px
  height auto 
  padding 10px
  background #fff
  border-radius 5px 
  border 1px solid #333
  position fixed 
  top 60px
  display none 
  z-index 20000
  overflow hidden
  left "calc(50% - %s)" % 400px